generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SYSTEM_ADMIN
  USER
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  passwordHash  String
  name          String
  role          Role           @default(USER)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  masterProfile MasterProfile?
}

model MasterProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio       String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Waitlist for services not yet launched
model ServiceWaitlist {
  id        String   @id @default(cuid())
  email     String
  name      String?
  service   String   // jobs, tender, events, opportunities
  userId    String?  // Optional: linked if user is registered
  createdAt DateTime @default(now())
  
  @@unique([email, service]) // One entry per email per service
  @@index([service])
}
